@page
@model SimpleHospitalSystem.Pages.Patients.NewAdmissionModel
@{
    ViewData["Title"] = "NewAdmission";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>New admission</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="SelectedDepartmentId">Select the department</label>
        <select asp-for="SelectedDepartmentId">
            <option value="">Select a department</option>
            @foreach (var department in Model.Departments)
            {
                <option value="@department.Id">@department.Name</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="SelectedDepartmentId"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomNumber">Input room number</label>
        <input class="form-control" asp-for="RoomNumber" />
        <span class="text-danger" asp-validation-for="RoomNumber"></span>
    </div>

    <div class="form-group">
        <label asp-for="BedNumber">Input bed number</label>
        <input class="form-control" asp-for="BedNumber" />
        <span class="text-danger" asp-validation-for="BedNumber"></span>
    </div>

    <input asp-for="PatientId" hidden />

    <button class="btn btn-primary" type="submit" asp-page="NewAdmission">Ok</button>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}