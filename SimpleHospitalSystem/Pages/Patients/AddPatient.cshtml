@page
@model SimpleHospitalSystem.Pages.Patients.AddPatientModel
@{
    ViewData["Title"] = "NewPatient";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Add patient</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Patient.Name">Input patient name</label>
        <input class="form-control" asp-for="Patient.Name" />
        <span class="text-danger" asp-validation-for="Patient.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patient.Age">Input patient age</label>
        <input class="form-control" asp-for="Patient.Age" />
        <span class="text-danger" asp-validation-for="Patient.Age"></span>
    </div>

    <button class="btn btn-primary" type="submit" asp-page="AddPatient">Ok</button>
</form>
